<ul id="comment-list">
  <% @comments.each do |comment| %>
  <li>
    <div class="avatar"><%= image_tag(gravatar_url(comment.email)) %></div>
    <div class="meta"><span>
        written <%= time_ago_in_words comment.created_at %> ago by <%= h comment.name %>
    </span></div>
    <div class="content"><%= markdown comment.content %></div>
  </li>
  <% end %>
</ul>
