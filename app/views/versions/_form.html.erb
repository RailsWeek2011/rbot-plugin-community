<%= form_for([@plugin, @version]) do |f| %>
  <% if @version.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@version.errors.count, "error") %> prohibited this version from being saved:</h2>

      <ul>
      <% @version.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :version %>
    <%= f.text_field :version %>
  </div>
  <div class="field">
    <%= f.label :file %>
    <% if @version.file? %>
      <div class="version-cached-file">Uploaded File: <code><%= @version.filename %></code></div>
    <% else %>
      <%= f.file_field :file %>
    <% end %>
    <%= f.hidden_field :file_cache %>
  </div>
  <div class="field">
    <%= f.label :changelog %>
    <%= f.text_area :changelog %>
  </div>
  <div class="field">
    <%= f.label :order %>
    <%= f.number_field :order %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
