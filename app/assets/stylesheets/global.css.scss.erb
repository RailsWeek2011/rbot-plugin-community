
$background_color: #fdfdfd;
$main_width: 920px; 

.middot_list {
    margin: 0;
}
.middot_list li {
    display: inline;

    &:after {
        content: " \00B7"; /* middot */
    }

    &:last-child:after {
        content: "";
    }
}

body {
    margin: 0;
    padding: 0;
    background-color: $background_color;

    font-family: helvetica,arial,freesans,clean,sans-serif;
    font-size: 90%;
}

a {
    $link_color: #4183c4;
    text-decoration: none;
    color: $link_color;
    &:hover {
        text-decoration: underline;
        color: $link_color;
    }
    &:visited {
        color: $link_color;
    }
}

code {
    font-family: Monaco,Monospace,"Courier New",serif;
    background-color: #F6F6F6;
    border: 1px solid #D9D9D9;
    font-size: 0.8em;
}

h3 {
    border-bottom: 1px solid #d9d9d9;
    font-size: 12px;
    color: #333;
    margin: 0;
}

#header-container {
    height: 90px;
    background: url(<%= asset_path('header_gradient.png') %>) repeat-x scroll 0 0 $background_color;
    border-bottom: 1px solid #dcdcdc;

    #header {
        position: relative;
        height: inherit;
        width: 920px;
        margin: 0 auto;

        #header-title {
            position: absolute;
            bottom: 6px;
            margin: 5px;
            width: 290px;
            height: 27px;

            h1 {
                font-family: "Trebuchet MS",sans-serif;
                font-size: 1.9em;
                font-weight: normal;
                letter-spacing: -1px;
                margin: 0;
                padding: 0 0 0 2px;
                display: inline;

                a {
                    font-family: inherit;
                    font-size: inherit;
                    font-weight: inherit;
                    color: black;
                    &:visited {
                        color: black;
                    }
                }
            }
            span {
                font-size: 0.83em;
                margin-left: 4px;
                text-shadow: 1px 1px 0 #FFFFFF;
            }
        } /* #header-title */

        #user-container {
            $width: 260px;
            background-color: $background_color;
            bottom: 1px;
            height: 20px;
            position: absolute;
            right: 10px;
            width: $width;
            #user {
                border-left: 1px solid #DCDCDC;
                border-right: 1px solid #DCDCDC;
                border-top: 1px solid #DCDCDC;
                height: 18px;
                margin: 1px;
                padding: 0;
                position: relative;
                width: $width - 4;
                .gravatar {
                    display: block;
                    margin: 0;
                    padding: 0;
                    img {
                        margin: 1px;
                        padding: 0;
                    }
                }
                ul {
                    display: block;
                    position: absolute;
                    left: 22px;
                    margin: 0;
                    padding: 0;
                    top: 0;

                    li {
                        color: #666666;
                        display: inline;
                        padding-left: 0px;
                        font-size: 0.8em;
                        font-weight: bold;

                        a {
                            font-size: inherit;
                            font-weight: inherit;
                            color: inherit;
                            &:hover {
                                text-decoration: underline;
                            }
                        }
                    }
                }
            } /* #user */
        } /* #user-outer-container */

    } /* #header */ 
} /* #header-container */

#main {
    width: $main_width;
    margin: 0 auto;
    padding: 15px 0 0 17px;
    font-size: 0.9em;
    position: relative;

    .left {
        float: left;
    }

    .right {
        float: right;
    }

    #content {
        padding-left: 10px;
        width: 600px;
    }

    #sidebar {
        margin-right: 20px;
        margin-top: 10px;
        width: 254px;
    }
} /* #main */

